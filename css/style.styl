	padding 45px 96px
	background-color: #f5f6f7
	color: #333333
	font-size: 18px
	font-weight: 700
	&__list
		display: flex
	&__item
		margin-left: 40px
		&:first-child
			margin-left: 0
	&__title
		padding-left: 45px
	&_cursor-pointer
		cursor: pointer
		display: inline-block
			
